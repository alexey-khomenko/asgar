div(x-data="{show: false}")
    div(class="bg-gray-20 rounded-md flex-shrink-0 py-4 px-3 sm:px-2 max-h-auto")
        div(class="flex justify-between items-center space-x-1")
            div(class="flex justify-start md:justify-between items-center flex-grow space-x-2")
                span(class="font-bold text-base md:text-lg sm:text-sm text-black leading-tight")
                    | #{card.title}
            - cls = 'flex justify-center items-center flex-shrink-0 w-5 sm:w-4 h-5 sm:h-4 text-gray-80 hover:text-purple-40 focus:text-purple-40 transition-transform duration-500 ease-linear transform'
            button(type="button", class=cls, :class="show ? '-rotate-90' : 'rotate-90'", @click="show = !show")
                - svg = {width: 6, height: 9, name: 'chevron'}
                include ../../partials/routes/svg

        div(x-show="show", x-cloak)
            div(class="mt-2")
                div(class="mb-5")
                    a(href="tel:" + card.phone, class="text-xs md:text-base sm:text-xs leading-tight text-gray-60")
                        | #{card.phone}
                a(href=card.link, class="flex justify-center items-center flex-grow w-full h-12 md:h-16 sm:h-12 rounded-lg text-white bg-purple-80 hover:bg-purple-40 focus:bg-purple-40")
                    span(class="font-medium text-sm md:text-lg sm:text-sm")
