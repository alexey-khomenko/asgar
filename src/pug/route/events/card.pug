div(class="grid gap-2 grid-cols-5 2xl:grid-cols-4 xl:grid-cols-3 lg:grid-cols-2 md:grid-cols-1")
    each card in group.cards
        div(class="flex flex-col justify-between items-stretch bg-gray-20 rounded-md flex-shrink-0 py-4 px-3 sm:px-2 min-h-32 md:min-h-0")
            div(class="flex flex-col md:flex-row-reverse justify-between items-stretch md:items-center mb-4 md:mb-0")
                span(class="font-bold text-base sm:text-sm leading-tight text-purple-80 md:text-black mb-1 md:mb-0")
                    | #{card.time}
                span(class="font-bold text-base sm:text-sm leading-tight text-black mr-0 md:mr-2")
                    | #{card.text}
            div(class="flex justify-start items-center h-4 md:hidden")
                a(href="#", class="font-semibold text-xs leading-4 text-purple-80 hover:text-purple-40 focus:text-purple-40")
                    | Подробнее