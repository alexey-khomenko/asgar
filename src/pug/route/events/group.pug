each group in groups
    section(class="mt-8")
        div(class="flex justify-start items-center mb-3 text-purple-80")
            div(class="flex justify-center items-center h-4 w-4 mr-2 ml-px")
                - svg = {width: 14, height: 16, name: 'calendar'}
                include ../../partials/routes/svg
            span(class="font-normal text-base leading-none")
                | #{group.date}

        div(class="grid gap-2 grid-cols-5 2xl:grid-cols-4 xl:grid-cols-3 lg:grid-cols-2 md:grid-cols-1")
            each card in group.cards
                include card