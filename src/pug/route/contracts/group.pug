section(class="mt-5 md:mt-6 sm:mt-5")
    div(class="flex justify-start items-center mb-6 md:mb-5 sm:mb-4")
        span(class="font-bold md:font-normal text-2xl md:text-base text-black md:text-purple-80 leading-7 md:leading-5")
            | #{group.title}
        if (group.number > 0)
            span(class="flex text-white text-xs h-5 min-w-5 ml-2 md:hidden")
                span(class="flex justify-center items-center px-1 rounded-full bg-pink flex-grow")
                    span(class="font-medium leading-tight")
                        | #{group.number}

    include card