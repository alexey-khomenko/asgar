            span(class="font-normal text-base sm:text-sm leading-tight text-black md:text-white mb-1 md:mb-0")
                | #{address}
            span(class="font-bold text-2xl sm:text-xl leading-tight text-black md:text-white mb-0 md:mb-2")
                | #{page.title.text}

        div(class="flex justify-start items-center space-x-16 xl:space-x-8 md:space-x-0 md:w-full md:border-t-2 md:py-2 border-purple-60")
            div(class="flex flex-col space-y-1 md:items-center flex-grow md:p-2 md:border-r border-purple-60")
                span(class="font-bold md:font-normal text-lg sm:text-sm leading-tight text-black md:text-white")
                    | Баланс
                span(class="font-bold text-2xl sm:text-xl leading-tight text-green-70 md:text-green-30")
                    | #{balance} ₴

            div(class="flex flex-col space-y-1 md:items-center flex-grow md:p-2 md:border-l border-purple-60")
