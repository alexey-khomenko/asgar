div(x-data="{show: false}")
    div(class="bg-gray-20 rounded-md flex-shrink-0 py-4 px-3 sm:px-2")
        div(class="flex justify-between items-center space-x-1")
            div(class="flex justify-start lg:justify-between items-center flex-grow space-x-2")
                span(class="font-bold text-base lg:text-lg sm:text-sm text-black leading-tight")
                    | #{card.title}
                include badge
            - cls = 'flex justify-center items-center flex-shrink-0 w-5 sm:w-4 h-5 sm:h-4 text-gray-80 hover:text-purple-40 focus:text-purple-40 transition duration-500 ease-in-out transform'
            button(type="button", class=cls, :class="{'-rotate-90': show, 'rotate-90': !show}", @click="show = !show")
                - svg = {width: 6, height: 9, name: 'chevron'}
                include ../../partials/routes/svg

        div(class="overflow-hidden", :class="{'max-h-full': show, 'max-h-none': !show}", x-cloak)
            div(class="flex justify-start items-center mt-2")
                span(class="text-xs md:text-base sm:text-xs leading-tight text-gray-60")
                    | !{card.text}