extends ../layout

block title
    | #{titles.act.text}

block header
    - md_header = {mode: 'default', text: titles.act.text, number: titles.act.number}
    - menus.lg_bottom.act.current = true
    include ../layout/header

block main
    main(class="asgar--container w-full mx-auto px-5 md:px-6 sm:px-5 xs:px-3 flex-grow")
        - title = titles.act
        include ../partials/h1

block footer
    - menus.md_bottom.act.current = true
    include ../layout/footer