header
    //- lg верхнее
    div(class="bg-purple-80 md:hidden")
        div(class="asgar--container w-full mx-auto px-5 md:px-6 sm:px-5 xs:px-3 flex justify-between")
            each edge in menus.lg_top
                div(class="flex justify-start items-center space-x-8")
                    each menu in edge
                        include menu/lg-top
    //- lg нижнее
    div(class="bg-white md:hidden shadow-lg mb-5")
        div(class="asgar--container w-full mx-auto px-5 md:px-6 sm:px-5 xs:px-3")
            div(class="flex justify-start items-center space-x-5")
                each menu in menus.lg_bottom
                    include menu/lg-bottom
    //- md боковое
    div(class="bg-purple-80 hidden md:block fixed z-10 top-0 bottom-0 left-0 w-3/4 overflow-y-auto overflow-x-hidden transition duration-500 ease-in-out transform -translate-x-full shadow-none asgar---header-menu")
        div(class="px-3")
            div(class="flex justify-end items-center h-16 sm:h-12 mb-1")
                button(type="button", class="flex justify-center items-center p-1 h-8 sm:h-6 w-8 sm:w-6 text-white hover:text-purple-20 focus:text-purple-20 asgar---header-menu-hide")
                    svg(class="max-w-full max-h-full", xmlns="http://www.w3.org/2000/svg", width="20", height="20", viewBox="0 0 20 20")
