            each menu in menus.md_top
                include menu/md-top
    //- md гамбургер
    div(class="bg-purple-80 hidden md:block px-6 sm:px-5 xs:px-3")
        div(class="flex justify-between items-center h-24 sm:h-16 py-2")
            button(type="button", class="flex justify-center items-center p-1 h-8 sm:h-6 w-8 sm:w-6 text-white hover:text-purple-20 focus:text-purple-20 asgar---header-menu-show")
                svg(class="max-w-full max-h-full", xmlns="http://www.w3.org/2000/svg", width="25", height="16", viewBox="0 0 25 16")
                    path(fill="currentColor", d="M0.722229 0H24.7222V2.66667H0.722229V0ZM0.722229 6.66667H24.7222V9.33333H0.722229V6.66667ZM0.722229 13.3333H24.7222V16H0.722229V13.3333Z")
            case md_header.mode
                when 'contracts'
                    include md-header/contracts
                when 'contract'
                    include md-header/contract
                default
                    include md-header/default