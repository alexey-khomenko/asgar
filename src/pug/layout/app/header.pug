header(x-data="{show_menu: false}")
    -
        lg_top = {
            left: {
                index: {
                    link: 'index.html',
                    text: 'Главная',
                    number: 0,
                    svg: {
                        width: '14',
                        height: '12',
                        name: 'home'
                    }
                },
                contracts: {
                    link: 'contracts.html',
                    text: 'Договоры',
                    number: 2,
                    svg: {
                        width: '13',
                        height: '15',
                        name: 'contracts'
                    }
                },
                settings: {
                    link: 'settings.html',
                    text: 'Настройки',
                    number: 0,
                    svg: {
                        width: '14',
                        height: '14',
                        name: 'settings'
                    }
                },
                contacts: {
                    link: 'contacts.html',
                    text: 'Контакты',
                    number: 0,
                    svg: {
                        width: '12',
                        height: '12',
                        name: 'contacts'
                    }
                }
            },
            right: {
                login: {
                    link: 'login.html',
                    text: 'Выход',
                    number: 0,
                    svg: {
                        width: '12',
                        height: '12',
                        name: 'logout'
                    }
                }
            }
        }
    div(class="bg-purple-80 md:hidden")
        div(class="w-full mx-auto px-5 md:px-6 sm:px-5 xs:px-3 flex justify-between", data-c-container)
            each edge in lg_top
                div(class="flex justify-start items-center space-x-8")
                    each menu in edge
                        include menu/lg-top
    -
        lg_bottom = {
            events: {
                link: 'events.html',
                text: 'История',
                svg: {
                    width: '15',
                    height: '12',
                    name: 'events'
                }
            },
            report: {
                link: 'report.html',
                text: 'Отчёт',
                svg: {
                    width: '14',
                    height: '12',
                    name: 'report'
                }
            },
            act: {
                link: 'act.html',
                text: 'Акт',
                svg: {
                    width: '11',
                    height: '14',
                    name: 'act'
                }
            },
            cameras: {
                link: 'cameras.html',
                text: 'Камеры',
                svg: {
                    width: '14',
                    height: '11',
                    name: 'cameras'
                }
            },
            control: {
                link: 'control.html',
                text: 'Управление',
                svg: {
                    width: '11',
                    height: '16',
                    name: 'control'
                }
            }
        }
    div(class="bg-white md:hidden shadow-lg mb-5")
        div(class="w-full mx-auto px-5 md:px-6 sm:px-5 xs:px-3", data-c-container)
            div(class="flex justify-start items-center space-x-5")
                each menu in lg_bottom
                    include menu/lg-bottom
    //- гамбургер
    div(class="bg-purple-80 hidden md:block px-6 sm:px-5 xs:px-3")
        div(class="flex justify-between items-center h-24 sm:h-16 py-2")
            - cls = 'flex justify-center items-center p-1 h-8 sm:h-6 w-8 sm:w-6 text-white hover:text-purple-20 focus:text-purple-20'
            button(type="button", class=cls, @click.stop="show_menu = true")
                - svg = {width: 25, height: 16, name: 'hamburger'}
                include ../../partials/routes/svg
            case page.menu.mode
                when 'contracts'
                    include md-header/contracts
                when 'contract'
                    include md-header/contract
                default
                    include md-header/default
    -
        md_top = {
            index: {
                link: 'index.html',
                text: 'Главная',
                number: 0,
                svg: {
                    width: '28',
                    height: '24',
                    name: 'home'
                },
                children: {}
            },
            contracts: {
                link: 'contracts.html',
                text: 'Договоры',
                number: 2,
                svg: {
                    width: '25',
                    height: '29',
                    name: 'contracts'
                },
                children: {
                    0: {
                        link: 'contract.html',
                        text: 'Договор № 1'
                    },
                    1: {
                        link: 'contract.html',
                        text: 'Договор № 2'
                    }
                }
            },
            settings: {
                link: 'settings.html',
                text: 'Настройки',
                number: 0,
                svg: {
                    width: '27',
                    height: '28',
                    name: 'settings'
                },
                children: {}
            },
            contacts: {
                link: 'contacts.html',
                text: 'Контакты',
                number: 0,
                svg: {
                    width: '25',
                    height: '25',
                    name: 'contacts'
                },
                children: {}
            },
            login: {
                link: 'login.html',
                text: 'Выход',
                number: 0,
                svg: {
                    width: '25',
                    height: '25',
                    name: 'logout'
                },
                children: {}
            }
        }
    - cls = 'bg-purple-80 hidden md:block fixed z-10 top-0 bottom-0 left-0 w-3/4 overflow-y-auto overflow-x-hidden transition duration-500 ease-in-out transform'
    div(class=cls, :class="{'translate-x-0 shadow-2xl': show_menu, '-translate-x-full shadow-none': !show_menu}", @click.away="show_menu = false", x-cloak)
        div(class="px-3")
            div(class="flex justify-end items-center h-16 sm:h-12 mb-1")
                - cls = 'flex justify-center items-center p-1 h-8 sm:h-6 w-8 sm:w-6 text-white hover:text-purple-20 focus:text-purple-20'
                button(type="button", class=cls, @click="show_menu = false")
                    - svg = {width: 20, height: 20, name: 'cross'}
                    include ../../partials/routes/svg
            each menu in md_top
                include menu/md-top