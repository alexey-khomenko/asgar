doctype html
block data
html(lang="ru")
    head
        meta(charset="utf-8")
        meta(name="viewport", content="initial-scale=1.0, width=device-width")
        link(href="js/scripts.js", rel="preload", as="script")
        include ../partials/layouts/favicons
        link(href="css/styles.css", rel="stylesheet")
        title
            | #{page.title.text}
    body(class="antialiased")
        div(class="fixed z-0 top-0 right-0 bottom-0 left-0 overflow-y-auto overflow-x-hidden flex flex-col justify-between bg-white", x-data="authData()")
            include ../layout/auth/header

            main(class="w-full mx-auto px-5 md:px-6 sm:px-5 xs:px-3 py-1", data-c-container)
                block main

            include ../layout/auth/footer
        script(src="js/scripts.js", defer='defer')