button(type="submit", class="flex justify-center items-center w-full bg-purple-80 hover:bg-purple-40 focus:bg-purple-40 h-12 md:h-16 sm:h-12 rounded-xl p-1", x-show="!sending", x-ref="submit_btn_" + submit.step)
    span(class="font-semibold text-white text-lg sm:text-base leading-5")
        | #{submit.title}
div(class="flex justify-center items-center w-full h-12 md:h-16 sm:h-12", x-show="sending", x-cloak)
    span(class="animate-spin-slow")
        - svg = {width: 24, height: 24, name: 'spinner'}
        include ../../partials/pages/svg
    span(class="font-normal text-base sm:text-xs leading-6 md:leading-5 sm:leading-4 ml-2")
        | Загрузка &hellip;